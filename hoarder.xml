  <Config Name="NEXTAUTH_URL" Target="NEXTAUTH_URL" Default="" Mode="" Description="" Type="Variable" Display="always" Required="true" Mask="false">http://hoarder:3000</Config>
  <Config Name="NEXTAUTH_SECRET" Target="NEXTAUTH_SECRET" Default="" Mode="" Description="" Type="Variable" Display="always" Required="true" Mask="true">v_CfkVwhqWM3d63npf4kojAP9qjsTQDflFjOQuI-GvE</Config>
  <Config Name="REDIS_HOST" Target="REDIS_HOST" Default="redis" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">redis</Config>
  <Config Name="REDIS_PORT" Target="REDIS_PORT" Default="6379" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">6379</Config>
  <Config Name="MEILI_ADDR" Target="MEILI_ADDR" Default="meilisearch" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">meilisearch</Config>
  <Config Name="MEILI_MASTER_KEY" Target="MEILI_MASTER_KEY" Default="" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="true">v_CfkVwhqWM3d63npf4kojAP9qjsTQDflFjOQuI-GvE</Config>
  <Config Name="DISABLE_SIGNUPS" Target="DISABLE_SIGNUPS" Default="false" Mode="" Description="" Type="Variable" Display="always" Required="false" Mask="false">false</Config>
</Container>
