<?xml version="1.0"?>
<Container version="2">
  <Name>hoarder</Name>
  <Repository>ghcr.io/mohamedbassem/hoarder-web:release</Repository>
  <Network>bridge</Network>
  <Privileged>false</Privileged>
  <Project>https://github.com/MohamedBassem/hoarder-app</Project>
  <Overview>A self-hostable bookmark-everything app with a touch of AI for the data hoarders out there.</Overview>
  <Category>Productivity:</Category>
  <WebUI>http://[IP]:[PORT:3000]</WebUI>
  <Icon>https://raw.githubusercontent.com/Collectathon/icons/main/hoarder.png</Icon>
  <ExtraParams>--restart unless-stopped</ExtraParams>
  <Requires>redis&#xD;
meilisearch&#xD;
hoarder-workers</Requires>
  <Config Name="Port" Target="3000" Default="3000" Mode="tcp" Description="" Type="Port" Display="always" Required="false" Mask="false">3003</Config>
